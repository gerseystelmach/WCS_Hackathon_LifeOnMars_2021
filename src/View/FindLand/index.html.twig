{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/findland.css">
{% endblock %}


{% block content %}
	<h1>Find Your Land !</h1>

    <main class= "container">

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for photo in photos %}
                <div class="col">
                    <div class="card d-flex flex-row">
                        <img src="{{photo.img_src}}" class="card-img-top ratio ratio-1x1 w-50" alt="plot of land">


                        <div class="card-body">
                            <p class="card-title">REF:{{photo.id}}</p>
                            <ul class="list-group list-group-flush">
                                {% set size = random(100, 1000)%}
                                <li class="list-group-item">Size: {{size}} sqft</li>
                                {% set price = size*150 %}
                                <li class="list-group-item">Price: {{price}} Â£</li>
                                <li class="list-group-item">Region: {{random(['North','South', 'East', 'West'])}}</li>

                            </ul>
                            <a class="btn btn-primary" href="#" role="button">Add to cart</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </main>
{% endblock %}

