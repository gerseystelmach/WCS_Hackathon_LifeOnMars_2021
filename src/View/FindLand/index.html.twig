{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/findland.css">
{% endblock %}


{% block content %}

	
		<div class="container my-5">
			<h1>Find Your Land</h1>
			<div class="d-flex flex-column align-items-center mb-5">
				<p class="mb-5 text-center intro">Please find below our lovely selection of land plots for your happy future on Mars! Browse and let us kow which one you fancy.</p>


			</div>
			<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 card-group">
				{% for photo in photos %}
					<div class="col">
						<div class="card d-flex flex-row">
							<img src="{{photo.img_src}}" class="card-img-top ratio ratio-1x1 w-50" alt="plot of land">

							<div class="card-body">
								<p class="card-title ms-3">REF: {{photo.id}}</p>
								<ul class="list-group list-group-flush">
									{% set size = random(100, 1000)%}
									<li class="list-group-item">Size:
										{{size}}
										sqft</li>
									{% set price = (size*150)|number_format() %}
									<li class="list-group-item">Price:
										{{price}}
										Â£</li>

									<li class="list-group-item">Region:
										{{random(['North','South', 'East', 'West'])}}</li>

									{% if size <= 300 %}
										<li class="list-group-item valueLabel fw-bold">Value land</li>
										<a class="my-3 btn btn-luxury rounded btnReserve fw-bold" href="/Contact/index/?id={{photo.id}}">Reserve now</a>
									{% elseif size > 300 and size <= 800 %}
										<li class="list-group-item comfortLabel fw-bold">Comfort land</li>

										<a class="my-3 btn btn-luxury rounded btnReserve fw-bold" href="/Contact/index/?id={{photo.id}}">Reserve now</a>
									{% else %}
										<li class="list-group-item luxuryLabel fw-bold">Luxury land</li>
										<a class="my-3 btn btn-luxury rounded btnReserve fw-bold" href="/Contact/index/?id={{photo.id}}">Reserve now</a></li>
									{% endif %}
								
							</ul>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
